                                        <div class="col-sm-4">
                                            <input type="text" id="cvDateInput" class="form-control custom-date" placeholder="Select date" />
                                            <button type="button" class="calendar-button" data-target="#cvDateInput" tabindex="-1">📅</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Supplier</label>
                                        <div class="col-sm-6">
                                            <div class="combo-container">
                                                <input type="text"
                                                       class="form-control combo-input"
                                                       id="cvSupplierId"
                                                       data-url="/api/disbursement/list/supplier"
                                                       data-value-field="Id"
                                                       data-text-field="SupplierName"
                                                       data-display-fields="SupplierName"
                                                       data-placeholder="Select supplier..."
